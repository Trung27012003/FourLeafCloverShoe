@model FourLeafCloverShoe.Share.Models.Size

@{
    ViewBag.Title = "Thêm mới";
    ViewBag.pTitle = "Kích cỡ";
}

<div class = "row" >
    <!-- [ sample-page ] start -->
    <div class = "col-xl-12" >
        <div class = "card" >
            <form asp-action = "Create" method = "post" >
                <div class = "card-body" >
                    <div asp-validation-summary = "ModelOnly" class = "text-danger" ></div>
                    <div class = "form-group" >
                        <label class = "form-label" >Kích cỡ</label>
                        <input asp-for = "Name" class = "form-control" placeholder = "Nhập kích cỡ" type = "text" >
                        <span asp-validation-for = "Name" class = "text-danger" ></span>
                    </div>
                    <div class = "col-sm-12" >
                        <div class = "btn-page card-body text-end" >
                            <button class = "btn btn-primary mb-0" type = "submit" >Thêm mới</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- [ sample-page ] end -->
    </div>
</div>