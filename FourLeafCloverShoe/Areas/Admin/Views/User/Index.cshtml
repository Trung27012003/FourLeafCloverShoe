@using FourLeafCloverShoe.Share.ViewModels;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@model IEnumerable<UserViewModel>




@{
    ViewBag.Title = "Danh sách";
    ViewBag.pTitle = "Người dùng";
}



<div class="row">
    <!-- [ sample-page ] start -->
    <div class="col-sm-12">
        <div class="card table-card">
            <div class="card-body">
                <div class="text-end p-sm-4 pb-sm-2">
                    <a asp-action="Create" asp-controller="Role" class="btn btn-primary"> <i class="ti ti-plus f-18"></i> Thêm mới </a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover tbl-product" id="pc-dt-simple">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Tên</th>
                                <th>Tên đăng nhập</th>
                                <th>Email</th>
                                <th>Vai trò</th>
                                <th>Trạng thái</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (item.ProfilePicture != null && item.ProfilePicture.Length > 0)
                                        {
                                            <img class="user-avtar wid-45 rounded-circle" alt="profile" src="data:image/*;base64,@(Convert.ToBase64String(item.ProfilePicture))" />
                                        }
                                        else
                                        {
                                            <img class="user-avtar wid-45 rounded-circle" alt="profile" src="~/fileadmin/assets/images/user/avatar-1.jpg" />
                                        }
                                    </td>
                                    <td>@item.FullName</td>
                                    <td>@item.UserName</td>
                                    <td>@item.Email</td>
                                    <td>
                                    @if (item.Roles.Count() == 0)
                                    {
                                        <span>No role</span>
                                    }
                                    else
                                    {
                                        @string.Join(" , ", item.Roles.ToList())
                                        ;

                                    }
                                    </td>
                                    <td>

                                    @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                                    {
                                            <span class="badge rounded-pill text-bg-primary">Hoạt động</span>

                                    }
                                    else
                                    {
                                            <span class="badge rounded-pill text-bg-danger">Khoá</span>
                                    }


                                    </td>
                                    <td>
                                        <div style="display: flex; justify-content: space-between; align-items: center;">
                                            <a asp-action="Edit" asp-route-userId="@item.Id" class="btn btn-info text-white" style="cursor:pointer"><i class="fas fa-user-edit text-secondary"></i>Sửa</a>
                                            <form asp-action="LockUnlock" asp-route-userId="@item.Id" method="post">

                                            @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                                            {
                                                    <button type="submit" class="btn btn-success text-white" style="cursor:pointer">
                                                        <span>Khoá</span>
                                                    </button>
                                            }
                                            else
                                            {
                                                    <button type="submit" class="btn btn-warning text-white" style="cursor:pointer">
                                                        <span>Mở khoá</span>
                                                    </button>
                                            }
                                            </form>
                                            <form asp-action="Delete" asp-route-userId="@item.Id" method="post">
                                                <button type="submit" id="deleteButton" class="btn btn-danger">
                                                    <span> <i class="fas fa-trash text-secondary"></i> Xoá</span>
                                                </button>
                                            </form>
                                        </div>

                                    </td>
                               </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- [ sample-page ] end -->
</div>


