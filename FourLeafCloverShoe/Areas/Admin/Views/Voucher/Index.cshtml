@model IEnumerable<FourLeafCloverShoe.Share.Models.Voucher>


@{
    ViewBag.Title = "Danh sách";
    ViewBag.pTitle = "Mã giảm giá";
}


<div class="row">
    <!-- [ sample-page ] start -->
    <div class="col-sm-12">
        <div class="card table-card">
            <div class="card-body">
                <div class="text-end p-sm-4 pb-sm-2">
                    <a asp-action="Create" class="btn btn-primary"> <i class="ti ti-plus f-18"></i> Thêm mới </a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover tbl-product" id="pc-dt-simple">
                        <thead>

                            <tr>
                                <th data-sortable="true"><button class="datatable-sorter">STT</button></th>
                                <th data-sortable="true"><button class="datatable-sorter">Mã</button></th>
                                <th data-sortable="true"><button class="datatable-sorter">Số lượng</button></th>
                                <th data-sortable="true"><button class="datatable-sorter">Giá trị (% / vnđ)</button></th>
                                <th data-sortable="true"><button class="datatable-sorter">Giảm từ - Tối đa</button></th>
                                <th data-sortable="true"><button class="datatable-sorter">Hạn sử dụng</button></th>
                                <th data-sortable="true"><button class="datatable-sorter">Trạng thái</button></th>

                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int stt = 0;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @{
                                            stt++;
                                            <span>@stt</span>
                                        }
                                    </td>
                                    <td>@item.VoucherCode</td>
                                    <td>@item.Quantity</td>
                                    <td>
                                        @item.VoucherValue @{
                                            var value = item.VoucherType == 0 ? "đ" : "%";
                                        } 
                                        <span> @value</span>
                                    </td>
                                    <td>@item.MinimumOrderValue đ - @item.MaximumOrderValue đ</td>
                                    <td>@item.StartDate?.ToString("HH:mm dd/MM/yyyy") - @item.EndDate?.ToString("HH:mm dd/MM/yyyy")</td>
                                    <td class="text-center">
                                        @if (item.Status ==1)
                                        {
                                            <span class="badge text-bg-primary">Hoạt động</span>
                                        }
                                        else
                                        {
                                            <span class="badge text-bg-danger">Ngừng hoạt động</span>
                                        }
                                        <div class="prod-action-links">
                                            <ul class="list-inline me-auto mb-0">
                                                <li class="list-inline-item align-bottom" data-bs-toggle="tooltip" title="Danh sách sản phẩm được áp dụng">
                                                    <a asp-action="ProductDetail" asp-route-productId="@item.Id"
                                                       class="avtar avtar-xs btn-link-secondary btn-pc-default">
                                                        <i class="ti ti-eye f-18"></i>
                                                    </a>
                                                </li>
                                                <li class="list-inline-item align-bottom" data-bs-toggle="tooltip" title="Chỉnh sửa">
                                                    <a asp-action="EditProduct" asp-route-productId="@item.Id" class="avtar avtar-xs btn-link-success btn-pc-default">
                                                        <i class="ti ti-edit-circle f-18"></i>
                                                    </a>
                                                </li>
                                                <li class="list-inline-item align-bottom" data-bs-toggle="tooltip" title="Xoá">
                                                    <a asp-action="DeleteProduct" asp-route-productId="@item.Id" class="avtar avtar-xs btn-link-danger btn-pc-default">
                                                        <i class="ti ti-trash f-18"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- [ sample-page ] end -->
</div>


