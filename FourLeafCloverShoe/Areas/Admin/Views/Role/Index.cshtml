@using FourLeafCloverShoe.Share.ViewModels;
@model IEnumerable<RoleViewModels>

@{
    ViewBag.Title = "Danh sách";
    ViewBag.pTitle = "Chức vụ";
}


<div class="row">
    <!-- [ sample-page ] start -->
    <div class="col-sm-12">
        <div class="card table-card">
            <div class="card-body">
                <div class="text-end p-sm-4 pb-sm-2">
                    <p>Xoá chưa được</p>

                    <a asp-action="Create" asp-controller="Role" class="btn btn-primary"> <i class="ti ti-plus f-18"></i> Thêm mới </a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover tbl-product" id="pc-dt-simple">
                        <thead>
                            <tr>
                                <th >#</th>
                                <th>Tên Chức vụ</th>
                                <th>Quyền</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td >#</td>
                                    <td >@item.Name</td>
                                    <td >
                                        @if (item.Claims.Count() == 0)
                                        {
                                            <span>No Claim</span>
                                        }
                                        else
                                        {
                                            @string.Join(" , ", item.Claims.ToList())
                                            ;

                                        }
                                    </td>
                                    <td class="text-center">
                                        <span >#</span>
                                        <div class="prod-action-links">
                                            <ul class="list-inline me-auto mb-0">
                                                <li class="list-inline-item align-bottom" data-bs-toggle="tooltip" title="Quản lí quyền">
                                                    <a asp-action="ManageRoleClaims" asp-route-roleId="@item.Id"
                                                       class="avtar avtar-xs btn-link-secondary btn-pc-default">
                                                        <i class="ti ti-eye f-18"></i>
                                                    </a>
                                                </li>
                                                <li class="list-inline-item align-bottom" data-bs-toggle="tooltip" title="Chỉnh sửa">
                                                    <a asp-action="Edit" asp-route-roleId="@item.Id" class="avtar avtar-xs btn-link-success btn-pc-default">
                                                        <i class="ti ti-edit-circle f-18"></i>
                                                    </a>
                                                </li>
                                                <li class="list-inline-item align-bottom" data-bs-toggle="tooltip" title="Xoá">
                                                        @Html.ActionLink("", "Delete", new { Id = item.Id }, new { @class = "avtar avtar-xs btn-link-danger btn-pc-default ti ti-trash f-18" })
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                                
                               
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- [ sample-page ] end -->
</div>
